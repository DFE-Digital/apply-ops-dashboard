<% if state.master_broken? %>
<div class='govuk-grid-row'>
  <h2 class='govuk-heading-xl app-banner app-banner--bad'>
    🚨 Master is broken
  </h2>
</div>
<% end %>

<% if state.deploying_to_staging? %>
<div class='govuk-grid-row'>
  <h2 class='govuk-heading-xl app-banner app-banner--progress'>
    🐓 Deploying to staging!
  </h2>
</div>
<% end %>

<% if state.deploying_to_production? %>
<div class='govuk-grid-row'>
  <h2 class='govuk-heading-xl app-banner app-banner--progress'>
    🕺 <%= state.latest_deploy_to('production').deployer_name %> is deploying to production!
  </h2>
</div>
<% elsif state.staging_and_production_not_in_sync? %>
<div class='govuk-grid-row'>
  <h2 class='govuk-heading-xl app-banner app-banner--progress'>
    ☭ Staging and Production not in sync
    <div class='govuk-body'>
      Manual testing is taking place (one would hope).
    </div>
  </h2>
</div>
<% end %>

<% if state.deploy_to_production_failed? %>
<div class='govuk-grid-row'>
  <h2 class='govuk-heading-xl app-banner app-banner--bad'>
    🚨 Deploy to production failed! 🚨
  </h2>
</div>
<% end %>
